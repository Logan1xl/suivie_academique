<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Configuration simple pour les tests -->
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Logger pour l'application en mode test -->
    <logger name="com.suivie_academique" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- RÃ©duire les logs Spring pendant les tests -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <!-- Root logger en mode WARN -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>